<%- include('../../../partials/header.ejs') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10 my-5">
          <div class="mx-5 card card-body mx-5 py-5">
           <form action="/posts/edit/<%= post._id %> " method="post">
            <div class="form-group">
              <label for="title">Enter your post title</label>
                <input
                type="text"
                name="title"
                class="form-control <%= error.title ? 'is-invalid' : '' %>"
                value="<%= post.title && post.title %>"
              />
              <% if(error.title){ %>
                <div class="invalid-feedback">
                  <%= error.title %>
                </div>
                <% } %>
             </div>
             <div class="form-group">
              <label for="tiny-mce-post-body">Enter your post body</label>
              <textarea
                name="body"
                id="tiny-mce-post-body"
                class="form-control <%= error.body ? 'is-invalid' : '' %>"
              >
<%= post.body && post.body %> </textarea
              >
              <% if(error.body){ %>
              <div class="invalid-feedback">
                <%= error.body %>
              </div>
              <% } %>
            </div>
            <div class="form-group">
              <label for="tags">Enter your post tags</label>
              <input
                type="text"
                name="tags"
                id="tags"
                class="form-control"
                placeholder="tag1,teg2,teg3"
                value="<%= post.tags.length > 0 ? post.tags.join(',') : '' %>"
              />

            </div>
            <% if(post.thumbail) { %>
           <label for="">Post Thumbail</label>
           <img src="<%= post.thumbail %>" id="thumbail" alt="Post Thumbail" class="img-fluid mb-4">
            <% } %> 
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="">Upload</span>
              </div>
              <div class="custom-file">
                <input
                  type="file"
                  name="post-thumbnail"
                  class="custom-file-input"
                  id="inputGroupFile"
                />
                <label for="inputGroupFile" class="custom-file-label">
                  Choose File</label
                >
              </div>
            </div>
            <input
            type="submit"
            class="btn btn-primary"
            value="Update Post"
          />
          <a href="/posts/delete/<%= post._id %> " class="btn btn-danger">Delete Post</a>
          </form>
          </div>
        </div>
      </div>
    </div>
   
    <%- include('../../../partials/footer.ejs') %>
    <script src="https://cdn.tiny.cloud/1/wptbioecsva1zo3jl7iv5m5zh3zgc42q8gmn6kxfxwvcpi96/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script src="/scripts/tinyMc.js"></script>
<script>
      $('#inputGroupFile').on('change',function(e) {
        let filename = e.target.files[0].name
$(this).next('.custom-file-label').html(filename)
      })
    </script>
       
</body>

</html>