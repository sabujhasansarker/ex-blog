<%- include('../../../partials/header.ejs') %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2">
          <%- include('../../../partials/sideBar.ejs') %>
        </div>
        <div class="col-md-10 my-5">
          <div class="card card-body">
            <h5>List of my posts</h5>
              <div class="row">
                  <% if(posts.length === 0) { %>
                    <div class="text-center text-muted">
                      <p>There is no posts available right now</p>
                      <a href="/posts/create" class="btn btn-primary btn-sm">Create Posts Now</a>
                    </div> 
                    <% }else{ %>
                      <% for(let post of posts.reverse()){ %> 
                      <div class="card col-sm-3 m-3">
                        <% if(posts.thumbnail){ %>
                           <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-3">
                          <% } %> 

                      <div class="card-body">
                        <a href="/posts/edit/<%= post._id %>" style="color: #222;"><h5><%= post.title %></h5></a>
                      </div>
                      </div>
                      <% } %> 
                      <% } %> 
              </div>
          </div>
        </div>
      </div>
    </div>
   
    <%- include('../../../partials/footer.ejs') %>

</body>

</html>